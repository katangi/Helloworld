@model ShoppingMvc.Models.Address

@*<script src="~/Scripts/jquery-1.8.2.min.js"></script>*@

<script src="~/Scripts/jquery.validate.js"></script>

<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
@*<script src="~/Scripts/bootstrap.min.js"></script>*@
<link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
<script src="~/Scripts/moment.js"></script>
<script src="~/Scripts/bootstrap-datetimepicker.js"></script>

@using (Html.BeginForm("Create", "Address", new { area = "Product" }, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <style type="text/css">
        .lable {
            margin-left: 50px;
        }

        .datepicker {
        }
         .myvalidation {
    color: red;
        }
    </style>
    @Html.AntiForgeryToken()

    <div class="modal-dialog">
        <div class="modal-content">
            @Html.AntiForgeryToken()
            <div class="modal-header">

                <div class="alert alert-success" role="alert">
                    @if (Model.Id != 0)
                    {
                        <h4 class="modal-title" style="text-align: center">Edit Address</h4>
                    }
                    else
                    {
                        <h4 class="modal-title" style="text-align: center">Add Address</h4>
                    }


                </div>

            </div>
            <div class="modal-body" style="width:500px;height:250px;">
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id)

                <form role="form">
                                     

                   
                    <div class="form-group lable" style="margin-bottom:1px">
                        <label for="recipient-name" class="control-label">Pin Code:</label>


                        @Html.TextBoxFor(model => model.Pin, new { @class = "form-control ", @style = "width: 75%; height:30px;" })
                       
                        @Html.ValidationMessageFor(model => model.Pin,"", new { @class = "myvalidation" })
                    </div>
                    <div class="form-group lable" style="margin-bottom:1px">
                        <label for="recipient-name" class="control-label">Address:</label>


                        @Html.TextBoxFor(model => model.userAddress, new { @class = "form-control ", @style = "width: 75%; height:30px;" })
                   
                        @Html.ValidationMessageFor(model => model.userAddress,"", new { @class = "myvalidation" })
                    </div>
                    <div class="form-group lable" style="margin-bottom:1px">
                        <label for="recipient-name" class="control-label">Addresstype:</label>


                        @Html.TextBoxFor(model => model.Addresstype, new { @class = "form-control ", @style = "width: 75%; height:30px;" })
                       
                        @Html.ValidationMessageFor(model => model.Addresstype,"", new { @class = "myvalidation" })
                    </div>         
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="modalClose" data-dismiss="modal" class="btn btn-default">Close</button>
                <button type="submit" class="btn btn-success">Save Address</button>
            </div>
        </div>
    </div>
}

