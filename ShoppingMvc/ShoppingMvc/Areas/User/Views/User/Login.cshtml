@model ShoppingMvc.Models.UserLogin
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .myvalidation {
        color: red;
    }
</style>

<h2>Login</h2>
<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
@if (ViewBag.Error != null)
{
    <h4 style="color:red">@ViewBag.Error</h4>
}
@if (TempData["Id"] != null)
{
    <div id="successMessage"><p class="alert alert-success" id="successMessage">@TempData["Id"]</p></div>
}
<script type="text/javascript">
    $('#successMessage').delay(2000).fadeOut('slow');
</script>

@using (Html.BeginForm("Login", "User", new { area = "User" }, FormMethod.Post))
{    @Html.ValidationSummary(true)

    @*@Html.HiddenFor(model => model.Id)*@
    <table cellpadding="10">

        <tr>
            <td>
                @Html.LabelFor(model => model.Email)
            </td>
            <td>
                @Html.TextBoxFor(model => model.Email)
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "myvalidation" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Password)
            </td>
            <td>
                @Html.PasswordFor(model => model.Password)
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "myvalidation" })
            </td>
        </tr>

        <tr>
            <td colspan="2" style="text-align: center">
                <button class="btn btn-small btn-success" style="color:white;" type="submit" value="Submit">Submit</button>
                @*@Html.ActionLink("Go To Index", "Index", "Customer", new { area = "Customer" }, new { @class = "btn btn-small btn-success" })*@
            </td>
            <td colspan="2" style="text-align: center"></td>
        </tr>
    </table>

        }

