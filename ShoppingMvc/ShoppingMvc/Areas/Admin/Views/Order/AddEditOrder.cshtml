@model ShoppingMvc.Models.OrderDetails

@*<script src="~/Scripts/jquery-1.8.2.min.js"></script>*@

<script src="~/Scripts/jquery.validate.js"></script>

<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
@*<script src="~/Scripts/bootstrap.min.js"></script>*@
<link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
<script src="~/Scripts/moment.js"></script>
<script src="~/Scripts/bootstrap-datetimepicker.js"></script>

@using (Html.BeginForm("Create", "Order", new { area = "Admin" }, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <style type="text/css">
        .lable {
            margin-left: 50px;
        }
        .datepicker {
        }
    </style>
    @Html.AntiForgeryToken()

    <div class="modal-dialog">
        <div class="modal-content">
            @Html.AntiForgeryToken()
            <div class="modal-header">

                <div class="alert alert-success" role="alert">
                    @if (Model.Id != 0)
                    {
                        <h4 class="modal-title" style="text-align: center">Edit Order</h4>
                    }
                    else
                    {
                        <h4 class="modal-title" style="text-align: center">Add Order</h4>
                    }


                </div>

            </div>
            <div class="modal-body" style="width:500px;height:520px;">
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id)

                <form role="form">
                    <div class="form-group lable" style="margin-bottom:1px">
                        <label for="recipient-name" class="control-label">Product Name:</label>
                        @if (Model.Id != 0)
                        {
                            @Html.DropDownListFor(model => model.ProductId, new SelectList(ViewBag.MyList, "Value", "Text", "Selected"), new { @class = "form-control ", @style = "width: 75%; height:30px;" })
                            @Html.ValidationMessageFor(model => model.ProductId)

                            <br />
                            @Html.ValidationMessageFor(model => model.ProductId)
                        }
                        else
                        {

                            @Html.DropDownListFor(model => model.ProductId, new SelectList(ViewBag.ProducttName, "Id", "Name"), "Select Product Name", new { @class = "form-control ", @style = "width: 75%; height:30px;" })
                            <br />
                            @Html.ValidationMessageFor(model => model.ProductId)
                        }
                    </div>
                    <div class="form-group lable" style="margin-bottom:1px">
                        <label for="recipient-name" class="control-label">OrderId:</label>


                        @Html.TextBoxFor(model => model.OrderId, new { @class = "form-control ", @style = "width: 75%; height:30px;" })
                        <br />
                        @Html.ValidationMessageFor(model => model.OrderId)
                    </div>

                    <div class="form-group lable" style="margin-bottom:1px">
                        <label for="recipient-name" class="control-label">Quantity:</label>


                        @Html.TextBoxFor(model => model.Quantity, new { @class = "form-control ", @style = "width: 75%; height:30px;" })
                        <br />
                        @Html.ValidationMessageFor(model => model.Quantity)
                    </div>
                    <div class="form-group lable" style="margin-bottom:1px">
                        <label for="recipient-name" class="control-label">Price:</label>


                        @Html.TextBoxFor(model => model.Price, new { @class = "form-control ", @style = "width: 75%; height:30px;" })
                        <br />
                        @Html.ValidationMessageFor(model => model.Price)
                    </div>
                    <div class="form-group lable" style="margin-bottom:1px">
                        <label for="recipient-name" class="control-label">OrderDate:</label>
                        @if (Model.Id != 0)
                        {
                           @Html.HiddenFor(model => model.OrderDate)
                          
                            <div class='input-group date' id='datetimepicker'>

                                <input type="text" name="text" value="@Model.OrderDate" class="form-control" style="width: 75%;" />
                             
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        }
                        else {
                        <div class='input-group date' id='datetimepicker1'>
                    
                            <input type="text" name="text" id="text" class="form-control" style="width: 75%;" />
                            @*@Html.TextBoxFor(model => model.OrderDate, new { @class = "form-control", @style = "width: 75%; height:30px;" })*@
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                      

                        <br />
                        @Html.ValidationMessageFor(model => model.OrderDate)
                        }
                    </div>
                  

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="modalClose" data-dismiss="modal" class="btn btn-default">Close</button>
                <button type="submit" class="btn btn-success">Save Product</button>
            </div>
        </div>
    </div>
}
<script type="text/javascript">
   
    $(document).ready(function () {
        $("#datetimepicker").datepicker();
    });
</script>