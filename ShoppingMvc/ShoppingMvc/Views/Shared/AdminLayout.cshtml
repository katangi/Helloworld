<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
  
   
    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
           
                <ul class="nav navbar-nav">
                  
                    <li class="dropdown">

                        <a class="dropdown-toggle" data-toggle="dropdown" href="">
                            USER <span class="caret"></span>
                        </a>

                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("User", "Index", "User", new { area = "Admin" }, new { @class = "nav navbar-nav" })</li>
                                                
                            <li>@Html.ActionLink("Country", "Index", "Country", new { area = "Admin" }, new { @class = "nav navbar-nav" })</li>
                            <li> @Html.ActionLink("State", "Index", "State", new { area = "Admin" }, new { @class = "nav navbar-nav" })</li>
                            <li>@Html.ActionLink("City", "Index", "City", new { area = "Admin" }, new { @class = "nav navbar-nav" })</li>
                           
                        </ul>
                    </li>

                    <li class="dropdown">

                        <a class="dropdown-toggle" data-toggle="dropdown" href="">
                            Product <span class="caret"></span>
                        </a>

                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Product", "Index", "Product", new { area = "Admin" }, new { @class = "nav navbar-nav" })</li>
                            <li>@Html.ActionLink("Category", "Index", "Category", new { area = "Admin" }, new { @class = "nav navbar-nav" })</li>

                        </ul>
                    </li>

                    <li>@Html.ActionLink("Order", "Index", "Order", new { area = "Admin" }, new { @class = "nav navbar-nav" })</li>


                </ul>
                <ul class="nav navbar-nav navbar-right">
                   <li><a href="#"><span class="glyphicon glyphicon-user"></span> @Session["username"]</a></li>
                    <li>@Html.ActionLink("Logout", "Logout", "User", new { area = "User" }, new { @class = "nav navbar-nav" })</li>
                </ul>
                @*<div class="navbar-collapse collapse">

                @Html.Partial("_LoginPartial")
            </div>*@
          
            </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        @*<hr />*@
        @*<footer> 
            <p>&copy; @DateTime.Now.Year </p>
        </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @*<script src="~/Scripts/bootstrap.js"></script>*@
    <script src="~/Scripts/jquery.dataTables.js"></script>
    <link href="~/Content/jquery.dataTables.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
